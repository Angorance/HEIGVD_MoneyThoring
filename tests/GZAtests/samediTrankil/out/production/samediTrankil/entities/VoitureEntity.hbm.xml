<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.VoitureEntity" table="voiture" schema="public" catalog="moneythoring">
        <id name="id">
            <column name="id" sql-type="serial(10)"/>
        </id>
        <property name="username">
            <column name="username" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="isactivated">
            <column name="isactivated" sql-type="bool(1)"/>
        </property>
        <property name="activationkey">
            <column name="activationkey" sql-type="varchar(50)" length="50" not-null="true"/>
        </property>
        <property name="salt">
            <column name="salt" sql-type="varchar(50)" length="50"/>
        </property>
    </class>
</hibernate-mapping>