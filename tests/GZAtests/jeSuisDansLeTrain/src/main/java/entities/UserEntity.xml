<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="entities.UserEntity">
        <table name="User" schema="public" catalog="moneythoring"/>
        <attributes>
            <id name="id">
                <column name="id" precision="10"/>
            </id>
            <basic name="username">
                <column name="username" length="50"/>
            </basic>
            <basic name="email">
                <column name="email" length="100"/>
            </basic>
            <basic name="password">
                <column name="password" length="50"/>
            </basic>
            <basic name="isactivated">
                <column name="isactivated" precision="1"/>
            </basic>
            <basic name="activationkey">
                <column name="activationkey" nullable="false" length="50"/>
            </basic>
            <basic name="salt">
                <column name="salt" length="50"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
